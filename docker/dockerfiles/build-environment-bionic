FROM ubuntu:bionic

ARG DEBIAN_FRONTEND=noninteractive

ADD assets/dpkg_nodoc /etc/dpkg/dpkg.cfg.d/90_nodoc
ADD assets/dpkg_nolocale /etc/dpkg/dpkg.cfg.d/90_nolocale
ADD assets/apt_nocache /etc/apt/apt.conf.d/90_nocache
ADD assets/apt_mindeps /etc/apt/apt.conf.d/90_mindeps

# Add package repositories
RUN set -e \
  && apt-get update \
  && apt-get install -y software-properties-common \
  && add-apt-repository -y ppa:beineri/opt-qt-5.11.3-bionic \
  && add-apt-repository -y ppa:git-core/ppa \
  && add-apt-repository -y ppa:pulse-eight/libcec \
  && rm -rf /var/lib/apt/lists/* \
  && rm -rf /tmp/* /var/tmp/* /var/log/*

# Install development tools and libraries
RUN set -e \
  && apt-get update \
  && apt-get install -y \
    nano \
    curl \
    wget \
    jq \
    autoconf \
    automake \
    libtool \
    libharfbuzz-dev \
    libfreetype6-dev \
    libfontconfig1-dev \
    libx11-dev \
    libxrandr-dev \
    libvdpau-dev \
    libva-dev \
    mesa-common-dev \
    libegl1-mesa-dev \
    yasm \
    libasound2-dev \
    libpulse-dev \
    libuchardet-dev \
    zlib1g-dev \
    libfribidi-dev \
    git \
    libgnutls28-dev \
    libgl1-mesa-dev \
    libsdl2-dev \
    cmake \
    build-essential \
    qt511base \
    qt511quickcontrols \
    qt511tools \
    qt511translations \
    qt511webchannel \
    qt511webengine \
    qt511x11extras \
    libcec4-dev \
    libjpeg-dev \
    libvulkan-dev \
    libgbm-dev \
    wayland-protocols \
    fuse \
    ccache \
  && ln -s /usr/bin/python3 /usr/bin/python \
  && rm -rf /var/lib/apt/lists/* \
  && rm -rf /tmp/* /var/tmp/* /var/log/*
